block main
    script.
        document.title = "Оклейка пленкой приборного щитка в СПб — цена оклейки пленкой приборного щитка автомобиля";
        document.getElementsByTagName('meta')["description"].content = "Оклейка пленкой приборного щитка в Санкт-Петербурге от автомобильного центра “Полимер”. Современное оборудование для детейлинга машин, выполнение задач любой сложности в СПб, гарантия на все виды услуг для авто, доступные цены и скидки"

    section.main
        h1 Оклейка пленкой приборного щитка
        +slipper(exteriorPrimarySlider)

        div.main_content
            p Оклейте интерьер салона защитной пленкой
                b  от 3000 рублей

            +modalBtn('Оставить заявку', 'full')

    section
        h2 3 причины оклеить щиток автомобиля пленкой
        +points(exteriorPoints)

    section
        h2 Результаты
        +slipper(exteriorExSlider)

    section
        +modalBtn('Рассчитать стоимость', 'full')

    section
        h2 Этапы работы
        +carousel(exteriorSteps)

    include ./components/advantages

    include ./components/protect

    section
        h2 Популярные вопросы
        +microFaq(exteriorFAQ)

    section
        h2 Оклейка пленкой приборного щитка
        +spoiler(interiorSEO)
