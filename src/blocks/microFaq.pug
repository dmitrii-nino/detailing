mixin microFaq(items)
    div.spoiler(itemscope, itemtype="https://schema.org/FAQPage")
        each item in items
            div(class='spoiler_item frame')
                div.spoiler_header
                    h3(itemscope, itemprop="mainEntity", itemtype="https://schema.org/Question")=item.header
                    img(src='./assets/icons/plus.svg' class='spoiler_icon plus' alt="#")
                    img(src='./assets/icons/minus.svg' class='spoiler_icon minus hidden' alt="#")
                div(class='spoiler_body hidden', itemscope, itemprop="acceptedAnswer", itemtype="https://schema.org/Answer")!=item.body
